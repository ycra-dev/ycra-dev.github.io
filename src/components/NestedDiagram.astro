---
interface Item {
  label: string;
  highlight?: boolean;
  children?: Item[];
}

interface Props {
  items: Item[];
  title?: string;
}

const { items, title } = Astro.props;
---

<div class="nested-diagram">
  {title && <div class="diagram-title">{title}</div>}
  <div class="diagram-content">
    {items.map((item) => (
      <div class:list={["group", { highlight: item.highlight }]}>
        <span class="group-label">{item.label}</span>
        {item.children && (
          <div class="group-children">
            {item.children.map((child) => (
              <span class:list={["tag", { highlight: child.highlight }]}>
                {child.label}
              </span>
            ))}
          </div>
        )}
      </div>
    ))}
  </div>
</div>

<style>
  .nested-diagram {
    margin: 1.5rem 0;
    padding: 1rem;
    border: 2px dashed var(--sl-color-gray-5);
    border-radius: 12px;
    background: var(--sl-color-gray-7);
  }

  .diagram-title {
    text-align: center;
    font-weight: 500;
    font-size: 0.8rem;
    color: var(--sl-color-gray-3);
    margin-bottom: 1rem;
  }

  .diagram-content {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
  }

  .group {
    background: var(--sl-color-gray-6);
    border: 2px solid var(--sl-color-gray-4);
    border-radius: 10px;
    padding: 0.75rem 1rem;
    min-width: 140px;
  }

  .group.highlight {
    border-color: var(--sl-color-accent);
    background: var(--sl-color-accent-low);
  }

  .group-label {
    display: block;
    font-weight: 600;
    font-size: 0.85rem;
    color: var(--sl-color-text);
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .group-children {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    justify-content: center;
  }

  .tag {
    display: inline-block;
    background: var(--sl-color-bg);
    border: 1px solid var(--sl-color-gray-5);
    color: var(--sl-color-text);
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .tag.highlight {
    background: var(--sl-color-accent);
    color: var(--sl-color-black);
    border-color: var(--sl-color-accent);
    font-weight: 600;
  }
</style>
