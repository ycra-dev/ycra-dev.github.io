---
const { entry } = Astro.locals.starlightRoute;
const { title } = entry.data;
const created = entry.data.created as Date | undefined;
const updated = entry.data.updated as Date | undefined;

function formatDate(date: Date): string {
	return date.toLocaleDateString('en-US', {
		year: 'numeric',
		month: 'short',
		day: 'numeric',
	});
}

const showDates = created || updated;
const isUpdated = updated && created && updated.getTime() !== created.getTime();
---

<h1 id="_top">{title}</h1>
{showDates && (
	<div class="page-dates">
		{created && <span class="date-item">{formatDate(created)}</span>}
		{isUpdated && (
			<>
				<span class="date-separator">&middot;</span>
				<span class="date-item">Updated {formatDate(updated!)}</span>
			</>
		)}
	</div>
)}

<style>
	@layer starlight.core {
		h1 {
			margin-top: 1rem;
			font-size: var(--sl-text-h1);
			line-height: var(--sl-line-height-headings);
			font-weight: 600;
			color: var(--sl-color-white);
		}
	}

	.page-dates {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-top: 0.5rem;
		font-size: var(--sl-text-xs);
		color: var(--sl-color-gray-3);
	}

	.date-separator {
		color: var(--sl-color-gray-4);
	}
</style>
